{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@devils-offline/datetime-offset": ["libs/datetime-offset/src/index.ts"],
      "@devils-offline/forms": ["libs/forms/src/index.ts"],
      "@devils-offline/guid": ["libs/guid/src/index.ts"],
      "@devils-offline/idb": ["libs/idb/src/index.ts"],
      "@devils-offline/offline-sync": ["libs/offline-sync/src/index.ts"],
      "@devils-offline/store": ["libs/store/src/index.ts"],
      "@devils-offline/keyboard": ["libs/keyboard/src/index.ts"],
      "@devils-offline/auth/data-access": [
        "libs/auth/data-access/src/index.ts"
      ],
      "@devils-offline/auth/feature-login": [
        "libs/auth/feature-login/src/index.ts"
      ],
      "@devils-offline/auth/util-guards": [
        "libs/auth/util-guards/src/index.ts"
      ],
      "@devils-offline/users/feature-grid": [
        "libs/users/feature-grid/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
